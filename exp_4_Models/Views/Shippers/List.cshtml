@using exp_4_Models.Models
@model List<Shipper>

@{
    ViewBag.mesaj = "";
    ViewBag.Title = "ShippersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6">
                <h2>Category List</h2>
            </div>
            <div class="col-6">
                <a href="/shippers/add" class="btn btn-success float-right">Shipper Add</a>
            </div>
        </div>
    </div>
    @if (TempData["Mesaj"] != null)
    {
        <div id="alertBox" class="alert alert-success" role="alert">
            @TempData["Mesaj"]
        </div>
    }

    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Shipper ID</th>
                    <th>Company Name</th>
                    <th>Company PhoneNumber</th>
                    <th colspan="2">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var shipper in Model)
                    {
                        <tr>
                            <td>@shipper.ShipperID</td>
                            <td>@shipper.CompanyName</td>
                            <td>@shipper.Phone</td>
                            <td>
                                <a href="/shippers/edit/@shipper.ShipperID" class="btn btn-circle" title="Düzenle">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <a href="/shippers/delete/@shipper.ShipperID" class="btn btn-warning" title="Sil"><i class="fa fa-traffic-light"></i></a>
                                
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3"> Listede hiçbir veri bulunmamaktadır. </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>