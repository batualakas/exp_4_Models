@using exp_4_Models.Models
@model Shipper


@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>


@if (ViewBag.Mesaj != null)
{
    <div id="alertBox" class="alert alert-danger" role="alert">
        @ViewBag.Mesaj
    </div>
}


@using (Html.BeginForm("Add", "Shippers", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <div class="mb-3">

        @Html.LabelFor(model =>model.CompanyName , htmlAttributes: new { @class = "form-label" })

        @Html.TextBoxFor(model => model.CompanyName, htmlAttributes: new { @class = "form-control" })

        @Html.ValidationMessageFor(model => model.CompanyName, "", htmlAttributes: new { @class = "text-danger" })


    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "form-label" })
        @Html.TextAreaFor(model => model.Phone, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Phone, "", htmlAttributes: new { @class = "text-danger" })
    </div>



    <button type="submit" class="btn btn-primary">Kaydet</button>

}





