@using exp_4_Models.Models
@model Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>



@if (ViewBag.Mesaj != null)
{
    <div id="alertBox" class="alert alert-danger" role="alert">
        @ViewBag.Mesaj
    </div>
}


@using (Html.BeginForm("Edit", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    @Html.HiddenFor(model=>model.CategoryID)
    <div class="mb-3">

        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "form-label" })

        @Html.TextBoxFor(model => model.CategoryName, htmlAttributes: new { @class = "form-control" })

        @Html.ValidationMessageFor(model => model.CategoryName, "", htmlAttributes: new { @class = "text-danger" })


    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-label" })
        @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Description, "", htmlAttributes: new { @class = "text-danger" })
    </div>



    <button type="submit" class="btn btn-primary">Güncelle</button>

}



